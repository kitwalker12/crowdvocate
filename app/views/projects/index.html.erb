<%= link_to "Create a project", new_project_path %>
<% @projects.each do |project| %>
  <%= link_to project_path(project) do %>
    <div>
      <%= image_tag project.image.url(:main) %>
    </div>
    <div>
      <%= project.name %>
    </div>
    <div>
      <%= project.description %>
    </div>
  <% end %>
<% end %>